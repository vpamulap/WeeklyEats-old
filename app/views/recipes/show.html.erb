<!DOCTYPE html>

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width" />
	
	<title>Weekly Eats</title>
  
	<!-- Included CSS Files -->
	<%= stylesheet_link_tag 'foundation', :media => 'screen' %>
	<%= stylesheet_link_tag 'app.css', :media => 'screen' %>
	

	<!--[if lt IE 9]>
		<%= stylesheet_link_tag 'ie.css', :media => 'screen' %>
	<![endif]-->

	
	<!-- IE Fix for HTML5 Tags -->
	<!--[if lt IE 9]>
		<%= javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js' %>
	<![endif]-->

</head>
<body>
	
	<!-- Included JS Files -->
	<%= javascript_include_tag 'foundation.js' %>
	<%= javascript_include_tag 'app.js' %>>

	<!-- Facebook Share Script -->
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) {return;}
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=270750379638433";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	

		<!-- container -->
		<div class="container">

			<!-- HEADER CODE -->
			<div class="row">
				<div class="four columns">
					<br>
					<%= image_tag "foundation/custom_images/logo.png", :alt => "Weekly Eats"%>
					<br><br><br>
				</div>
			</div>
	

			<div class="row">
				<div class="ten columns centered">
					<div class="panel" align=center>

						<!-- NAVIGATION PANEL -->
						<%= link_to(image_tag("foundation/custom_images/RecipeActiveButton.png", :alt => "Recipes"), :controller=>"dashboard", :action => "main") %>
						
						<%= link_to(image_tag("foundation/custom_images/ShoppingInactiveButton.png", :alt => "Shopping"), :controller=>"dashboard", :action => "shopping") %>
						
						<%= link_to(image_tag("foundation/custom_images/StatsInactiveButton.png", :alt => "Stats"), :controller=>"dashboard", :action => "stats") %>
						
						<br><br>
				
					
						
						<!-- NEW LINE -->

						<div class="row" align=center>
							<div class="one columns">
							</div>
							
							<div class="seven columns">		
									<h2><%= @recipe.name %></h2><br>					
							    <%= image_tag "recipes/#{@recipe.picture_path}" %>		
								<br><br>
								<h4 align="left">Here's What You Need:</h4>
								<br>
								<h6>
								<ul align="left">
								    <% @recipe.ingredients.each do |ingredient| %>
								    <li type='circle'><%= ingredient.quantity %> <%= ingredient.name %></li>
								    <% end %>
								</ul>
								</h6>
							    
							    <div class="row">
								<h4 align="left">Here's How You Do It:</h4>
									<h6><p align="left"><%= @recipe.directions %></p></h6>
							        
							        
								    
								    <!--
								    <div class="fb-like" data-href="INSERT_RECIPE_URL_HERE" data-send="true" data-width="450" data-show-faces="true"></div>
								    -->							
						        </div>

			
							    <br><br><br>
							</div>

							<div class="four columns">
								<br><br><br><br><br>
							    <%= image_tag "CookNow.png" , :align => "middle", :height=>"150", :width => "150"%>
							    <br><br><br><br>
								<table>
									<tr>
										<td><%= image_tag "recipes/neil.jpg", :align => "middle", :width => "100", :height=>"100", :float => "left" %></td>
							    		<td><b>Neil</b> Cooked this Last Week</td>
									</tr>
								</table>
							
							</div>
						</div>
						
					
						
						
					</div>					
				</div>
			
		</div>


	
</body>
</html>
